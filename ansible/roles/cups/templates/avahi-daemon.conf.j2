[server]
host-name={{ inventory_hostname }}
domain-name=local
use-ipv4=yes
use-ipv6=yes
allow-interfaces=*
enable-dbus=yes

[wide-area]
enable-wide-area=yes

[publish]
publish-addresses=yes
publish-hinfo=yes
publish-workstation=yes
publish-domain=yes

[reflector]
enable-reflector=no

[rlimits]
rlimit-core=0
rlimit-data=4194304
rlimit-fsize=0
rlimit-nofile=768
rlimit-stack=4194304
