# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# =============================================================================
# Kubernetes Configuration
# =============================================================================

# Kubernetes namespace for Jenkins
# namespace = "jenkins"

# Jenkins Helm chart version
# jenkins_chart_version = "5.8.3"
# See available versions: https://github.com/jenkinsci/helm-charts/releases

# Jenkins Docker image tag
# jenkins_image_tag = "lts-jdk17"
# Options: "lts", "lts-jdk17", "lts-jdk21", or specific version like "2.440-jdk17"

# =============================================================================
# Storage Configuration (NFS for controller, ephemeral for agents)
# =============================================================================

# NFS server hostname or IP
# nfs_server = "ritchie"

# NFS export path for Jenkins home
# nfs_path = "/mnt/default/services/jenkins"

# Storage size for Jenkins home
# storage_size = "20Gi"

# =============================================================================
# Ingress Configuration
# =============================================================================

# Jenkins ingress hostname
# ingress_host = "ci.jwfh.ca"

# Ingress class name (traefik, nginx, etc.)
# ingress_class_name = "traefik"

# =============================================================================
# Controller Resource Configuration
# =============================================================================

# controller_cpu_request = "500m"
# controller_cpu_limit = "2000m"
# controller_memory_request = "1Gi"
# controller_memory_limit = "4Gi"

# =============================================================================
# Agent Resource Configuration (Kubernetes dynamic agents)
# =============================================================================

# agent_cpu_request = "500m"
# agent_cpu_limit = "1000m"
# agent_memory_request = "512Mi"
# agent_memory_limit = "2Gi"

# Maximum number of concurrent agent pods
# agent_max_instances = 10

# =============================================================================
# GitHub Organization Configuration
# =============================================================================

# GitHub organization or user to scan for repositories
# github_organization = "jwfh"

# Jenkins credentials ID for GitHub authentication (create this in Jenkins)
# This should be a GitHub personal access token with repo access
# github_credentials_id = "github-token"

# Regex pattern to filter repositories
# Examples:
#   ".*"                   - All repositories
#   "^my-project-.*"       - Repositories starting with "my-project-"
#   "^(app|lib|infra)-.*"  - Repositories starting with app-, lib-, or infra-
# github_repo_regex = ".*"

# Regex pattern to filter branches for building
# Examples:
#   "^(main|master|develop|feature/.*)$"  - main, master, develop, and feature branches
#   ".*"                                   - All branches
# github_branch_regex = "^(main|master|develop|feature/.*)$"

# Organization scan interval in minutes
# github_scan_interval = 60

